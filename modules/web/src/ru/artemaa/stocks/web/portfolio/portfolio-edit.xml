<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="ru.artemaa.stocks.web.portfolio.PortfolioEdit"
        datasource="portfolioDs"
        focusComponent="fieldGroup"
        messagesPack="ru.artemaa.stocks.web.portfolio">
    <dsContext>
        <datasource id="portfolioDs"
                    class="ru.artemaa.stocks.entity.portfolio.Portfolio"
                    view="portfolio-edit-view">
            <collectionDatasource id="incomeDs"
                                  property="income"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="portfolioDs">
            <column width="250px">
                <field property="name"/>
            </column>
        </fieldGroup>
        <textField id="incomeAmount" caption="msg://editor.totalIncomeAmount" editable="false"/>
        <groupBox id="incomeBox"
                  caption="msg://ru.artemaa.stocks.entity.portfolio/Portfolio.income">
            <table id="incomeTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="date"/>
                    <column id="amount"/>
                </columns>
                <rows datasource="incomeDs"/>
                <buttonsPanel>
                    <button action="incomeTable.create"/>
                    <button action="incomeTable.edit"/>
                    <button action="incomeTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
