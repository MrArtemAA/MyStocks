<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="ru.artemaa.finances.personal.web.portfolio.PortfolioEdit"
        datasource="portfolioDs"
        focusComponent="fieldGroup"
        messagesPack="ru.artemaa.finances.personal.web.portfolio">
    <dsContext>
        <datasource id="portfolioDs"
                    class="ru.artemaa.finances.personal.entity.portfolio.Portfolio"
                    view="portfolio-edit-view"/>
        <collectionDatasource id="portfolioSummariesDs"
                              class="ru.artemaa.finances.personal.entity.portfolio.PortfolioSummary"
                              datasourceClass="ru.artemaa.finances.personal.web.portfolio.PortfolioSummaryCollectionDatasource"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="portfolioDs">
            <column width="250px">
                <field property="name"/>
            </column>
        </fieldGroup>
        <textField id="incomeAmount"
                   caption="msg://editor.totalIncomeAmount"
                   editable="false"/>
        <groupBox id="incomeBox"
                  caption="msg://ru.artemaa.finances.personal.entity.portfolio/Portfolio.income">
            <table id="incomeTable"
                   height="200px"
                   width="100%">
                <columns>
                    <column id="sum"/>
                    <column id="currency"/>
                </columns>
                <rows datasource="portfolioSummariesDs"/>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
