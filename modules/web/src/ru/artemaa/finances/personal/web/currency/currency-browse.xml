<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="ru.artemaa.finances.personal.web.currency.CurrencyBrowse"
        focusComponent="currenciesTable"
        lookupComponent="currenciesTable"
        messagesPack="ru.artemaa.finances.personal.web.currency">
    <dsContext>
        <collectionDatasource id="currenciesDs"
                              class="ru.artemaa.finances.personal.entity.Currency"
                              datasourceClass="ru.artemaa.finances.personal.web.currency.CurrencyDatasource"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="currenciesTable"
            spacing="true">
        <table id="currenciesTable"
               width="100%">
            <columns>
                <column id="name"/>
                <column id="code"/>
            </columns>
            <rows datasource="currenciesDs"/>
            <rowsCount/>
        </table>
    </layout>
</window>
