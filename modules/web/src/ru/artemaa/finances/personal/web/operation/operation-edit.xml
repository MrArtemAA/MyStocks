<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="ru.artemaa.finances.personal.web.operation.OperationEdit"
        datasource="operationDs"
        focusComponent="fieldGroup"
        messagesPack="ru.artemaa.finances.personal.web.operation">
    <dsContext>
        <datasource id="operationDs"
                    class="ru.artemaa.finances.personal.entity.Operation"
                    view="operation-detailed-view"/>
        <collectionDatasource id="stocksDs"
                              class="ru.artemaa.finances.personal.entity.Stock"
                              view="_minimal">
            <query>
                <![CDATA[select e from stocks$Stock e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="portfoliosDs"
                              class="ru.artemaa.finances.personal.entity.portfolio.Portfolio"
                              view="_minimal"/>
    </dsContext>
    <dialogMode forceDialog="true"
                height="AUTO"
                width="600"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="operationDs">
            <column width="250px">
                <field optionsDatasource="portfoliosDs"
                       property="portfolio"/>
                <field optionsDatasource="stocksDs"
                       property="stock"/>
                <field property="type"/>
                <field property="date"/>
                <field property="price"/>
                <field property="amount"/>
            </column>
        </fieldGroup>
        <textField id="pricePerOne"
                   caption="msg://pricePerOne"
                   editable="false"/>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
