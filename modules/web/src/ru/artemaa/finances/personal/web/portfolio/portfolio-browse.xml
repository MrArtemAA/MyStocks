<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="ru.artemaa.finances.personal.web.portfolio.PortfolioBrowse"
        focusComponent="portfoliosTable"
        lookupComponent="portfoliosTable"
        messagesPack="ru.artemaa.finances.personal.web.portfolio">
    <dsContext>
        <groupDatasource id="portfoliosDs"
                         class="ru.artemaa.finances.personal.entity.portfolio.Portfolio"
                         view="portfolio-browse-view">
            <query>
                <![CDATA[select e from stocks$Portfolio e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="portfoliosTable"
            spacing="true">
        <groupTable id="portfoliosTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rows datasource="portfoliosDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="portfoliosTable.create"/>
                <button id="editBtn"
                        action="portfoliosTable.edit"/>
                <button id="removeBtn"
                        action="portfoliosTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
