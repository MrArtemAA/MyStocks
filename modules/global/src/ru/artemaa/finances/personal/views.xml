<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="ru.artemaa.finances.personal.entity.Stock"
          extends="_local"
          name="stock-detailed-view">
        <property fetch="AUTO"
                  name="currency"
                  view="_local"/>
        <property name="industry"
                  view="_minimal"/>
    </view>
    <view class="ru.artemaa.finances.personal.entity.Operation"
          extends="_local"
          name="operation-detailed-view">
        <property name="stock"
                  view="_local">
        </property>
        <property name="portfolio"
                  view="_minimal"/>
    </view>
    <view class="ru.artemaa.finances.personal.entity.portfolio.Portfolio"
          extends="_local"
          name="portfolio-edit-view">
        <property name="name"/>
    </view>
    <view class="ru.artemaa.finances.personal.entity.portfolio.Portfolio"
          extends="_local"
          name="portfolio-browse-view">
        <property name="name"/>
    </view>
    <view class="ru.artemaa.finances.personal.entity.Account"
          extends="_local"
          name="account-detailed-view">
        <property name="accountType"
                  view="_minimal"/>
        <property name="currency"
                  view="_minimal">
            <property name="code"/>
        </property>
    </view>
    <view class="ru.artemaa.finances.personal.entity.operation.SimpleAccountOperation"
          extends="_local"
          name="simpleAccountOperation-detailed-view">
        <property name="account"
                  view="_minimal">
            <property name="currencyCode"/>
        </property>
        <property name="category"
                  view="_minimal"/>
    </view>
    <view class="ru.artemaa.finances.personal.entity.operation.Transfer"
          extends="_local"
          name="transfer-detailed-view">
        <property name="sourceAccount"
                  view="_minimal">
            <property name="currencyCode"/>
        </property>
        <property name="destAccount"
                  view="_minimal">
            <property name="currencyCode"/>
        </property>
    </view>
</views>
